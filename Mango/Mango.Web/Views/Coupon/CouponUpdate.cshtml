@model CouponDto
@{
    ViewData["Title"] = "Update Coupon";
}
<form asp-action="CouponUpdate">
    <br />
    <div class="container border p-2">
        <h2 class="text-dark text-center">Update Coupon</h2>
        <input type="hidden" asp-for="CouponId" />
        <hr />
        <div class="row">
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Coupon Code</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="CouponCode" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Discount Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="DiscountAmount" />
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Minimum Amount</label>
            </div>
            <div class="col-10 pb-3">
                <input class="form-control" asp-for="MinAmount" />
            </div>

            <div class="col-5 offset-2">

                <a class="btn-primary btn form-control" asp-action="CouponIndex">Back to List</a>
            </div>
            <div class="col-5">
                <input type="submit" value="Update" class="btn btn-danger form-control" />

            </div>

        </div>

        <div>
        </div>
    </div>
</form>
