@model RegistrationRequestDto
@{
    ViewData["Title"] = "Register";
}
<style>
    .required::after {
        content: "*";
        font-weight: bold;
        padding:2px;
        color: red;
    }
</style>
<form method="POST" asp-action="Register">
    <div class="container border p-4 mt-5">
        <div class="row text-center">
            <h1>Create Account</h1>
        </div>
            <div class="row">
                <div class="col-2">
                <label class="control-label required pt-2" style="font-size:20px;">Name</label>
                </div>
                <div class="col-10 pb-2">
                <input type="text" asp-for="Name" class="form-control" placeholder="Name..." />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            <div class="col-2">
                <label class="control-label required pt-2" style="font-size:20px;">Email</label>
            </div>
            <div class="col-10 pb-2">
                <input type="text" asp-for="Email" class="form-control" placeholder="Email..." />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label required pt-2" style="font-size:20px;">Phone</label>
            </div>
            <div class="col-10 pb-2">
                <input type="text" asp-for="PhoneNumber" class="form-control" placeholder="Phone..." />
                <span asp-validation-for="PhoneNumber" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label required pt-2" style="font-size:20px;">Password</label>
            </div>
            <div class="col-10 pb-2">
                <input type="password" asp-for="Password" class="form-control" placeholder="Password..." />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="col-2">
                <label class="control-label pt-2" style="font-size:20px;">Role</label>
            </div>
            <div class="col-10 pb-2">
                <select asp-for="Role" class="form-select" asp-items="@ViewBag.RoleList">
                    <option disabled selected>--Select Role--</option>
                </select>
                <span asp-validation-for="Role" class="text-danger"></span>
            </div>
            <div class="col-5 offset-2">

                <a class="btn-primary btn form-control" asp-action="Login">Login</a>
            </div>
                <div class="col-5">
                    <button type="submit" class="form-control btn btn-success" value="Submit">Create</button>
                </div>
            </div>
    </div>
</form>

@section Scripts{
    <partial name="_ValidationScriptsPartial" />
            }